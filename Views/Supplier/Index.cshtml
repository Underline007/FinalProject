@model IEnumerable<FinalProject.Models.Supplier>

<h2>Suppliers</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => supplier.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => supplier.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => supplier.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@supplier.SupplierId">Edit</a> |
                    <a asp-action="Detail" asp-route-id="@supplier.SupplierId">Detail</a> |
                    <a asp-action="Delete" asp-route-id="@supplier.SupplierId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
