@model FinalProject.ViewModels.CategoryCreateEditViewModel

<h2>@(Model.CategoryId == 0 ? "Create Category" : "Edit Category")</h2>

<form asp-action="@(Model.CategoryId == 0 ? "Create" : "Edit")" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (Model.CategoryId != 0)
    {
        <input type="hidden" asp-for="CategoryId" />
    }

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="@(Model.CategoryId == 0 ? "Create" : "Save")" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
